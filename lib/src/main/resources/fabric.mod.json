{
  "schemaVersion": 1,
  "id": "comma",
  "version": "${version}",

  "name": "COMMA Config API",
  "icon": "assets/comma/icon.png",
  "description": "An API for creating complex and stylish config menu screens for your Fabric mods.",
  "license": "LGPL-3.0",
  "authors": [
    "Dr. Rubisco (@thedocruby)"
  ],
  "contact": {
    "homepage": "https://thedocruby.dev/comma",
    "sources": "https://github.com/thedocruby/comma",
    "issues": "https://github.com/thedocruby/comma/issues"
  },

  "environment": "*",
  "entrypoints": {
    "main": [
      "dev.thedocruby.comma.CommaMod"
    ]
  },
  "mixins": [
    "comma.mixins.json"
  ],

  "depends": {
    "java": ">=17",
    "minecraft": "1.18.2",
    "fabricloader": ">=0.13.3"
  },
  "suggests": {
    "modmenu": ">=3.1.0"
  },
  "custom": {
    "modmenu": {
      "links": {
        "modmenu.wiki": "https://github.com/thedocruby/comma/wiki",
        "modmenu.discord": "https://discord.gg/kdZ6gH7Hg6",
        "modmenu.patreon": "https://patreon.com/thedocruby",
        "modmenu.modrinth": "https://modrinth.com/mod/comma",
        "modmenu.youtube": "https://www.youtube.com/channel/UCONFVOfzRPAISQj2Xbb827w"
      }
    }
  }
}
