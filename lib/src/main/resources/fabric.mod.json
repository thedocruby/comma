{
  "schemaVersion": 1,
  "id": "comma",
  "version": "${version}",

  "name": "COMMA Config API",
  "icon": "assets/comma/icon.png",
  "description": "An API for creating complex and stylish config menu screens for your Fabric mods.",
  "license": "LGPL-3.0",
  "authors": [
    "Dr. Rubisco (@thedocruby)", "Boxed (@maximumpower55)"
  ],
  "contact": {
    "homepage": "https://thedocruby.dev/comma",
    "sources": "https://github.com/thedocruby/comma",
    "issues": "https://github.com/thedocruby/comma/issues"
  },

  "environment": "*",
  "entrypoints": {
    "main": [
      "dev.thedocruby.comma.CommaMod"
    ]
  },
  "mixins": [
    "comma.mixins.json"
  ],

  "depends": {
    "java": ">=17",
    "minecraft": "1.18.x",
    "fabricloader": ">=0.12.12",
    "fabric": "*"
  },
  "suggests": {
    "modmenu": ">=3.0.1"
  }
}
